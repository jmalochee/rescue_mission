<%= link_to "see all questions", questions_path %>

<h2> <%= @question.title %> </h2>
<p>
  <%= simple_format(@question.description.gsub(' ', '&nbsp;')) %>
</p>
<span> <%= link_to "edit this question", edit_question_path(@question) %>
  <%= link_to "destroy question", @question, method: :delete, data: { confirm: "You sure, yo?"} %>  </span>

<h3>Answers</h3>
<%= link_to "submit an answer", new_question_answer_path(@question) %>
  <% @answers.each do |a| %>
    <div class="answer">
      <p>
        <%= a.description %>
      </p>
      <span class="post-details"> posted by <%= a.user_id %> at <%= a.created_at %> </span>
    </div>
  <% end %>
