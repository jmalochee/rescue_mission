<h1>Edit a Question</h1>

<% unless @question.errors.empty? %>
  <div class="error">
    <%= @question.errors.full_messages.to_sentence %>
  </div>
<% end %>

<%= form_for @question do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </p>

  <p>
    <%= f.submit %>
    <%= link_to "destroy question", @question, method: :delete, data: { confirm: "You sure, yo?"} %>  </span>
  </p>
<% end %>

<%= link_to 'Back', questions_path %>
